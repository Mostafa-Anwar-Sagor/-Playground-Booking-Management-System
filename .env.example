# Professional Playground Booking System Environment Configuration

# Google Maps and External Services
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# Business Configuration
CURRENCY=USD
CURRENCY_SYMBOL=$
TIMEZONE=UTC
BUSINESS_NAME=PlayGround Booking Pro

# Dynamic UI Text Configuration (All Optional - Defaults Provided)

# Section Headers
UI_PLAYGROUND_DETAILS_TITLE="Venue Information"
UI_BOOKING_DETAILS_TITLE="Reservation Details"
UI_CUSTOMER_INFO_TITLE="Client Information"
UI_PAYMENT_DETAILS_TITLE="Payment Information"
UI_BOOKING_TIMELINE_TITLE="Reservation Timeline"

# Button Text  
UI_RESCHEDULE_BUTTON="Modify Booking"
UI_COMPLETE_PAYMENT_BUTTON="Finish Payment"
UI_RETURN_DASHBOARD_BUTTON="Back to Dashboard"

# Status Labels
UI_STATUS_CONFIRMED="Approved"
UI_STATUS_ACTIVE="In Progress"  
UI_STATUS_COMPLETE="Finished"
UI_STATUS_CANCELLED="Canceled"
UI_STATUS_PENDING="Awaiting"

# Field Labels
UI_EMAIL_LABEL="Email Address"
UI_PHONE_LABEL="Contact Number"
UI_TOTAL_AMOUNT_LABEL="Grand Total"
UI_PAYMENT_STATUS_LABEL="Payment State"
UI_PLAYGROUND_NAME_LABEL="Venue Name"
UI_LOCATION_LABEL="Address"

# Advanced Booking Configuration
DEFAULT_SLOT_DURATION=60
DEFAULT_BREAK_DURATION=15
MAX_ADVANCE_BOOKING_DAYS=30
MIN_BOOKING_NOTICE_HOURS=2

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_email_password

# Payment Gateway Configuration
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Database Configuration (if using PostgreSQL)
DB_NAME=playground_booking
DB_USER=postgres
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

# Security
SECRET_KEY=your_secret_key_here
DEBUG=True
ALLOWED_HOSTS=127.0.0.1,localhost,yourdomain.com

# Redis Configuration (for real-time features)
REDIS_URL=redis://localhost:6379/0

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
ALLOWED_VIDEO_TYPES=mp4,avi,mov,webm
